html,
body {
  height: 100%;
}
body {
  margin: 0;
  background: linear-gradient(135deg, #FF8080, #1B82C7);
  background-attachment:fixed;
  font-family: 微软雅黑, sans-serif;
  font-weight: 100;
}
.inputZone {}
input.input-form, select, textarea {
    height: 42px;
    border: 2px solid #d1d3d4;
    width: 80%;
    padding: 0px 5px;
    font-family: "Poppins";
    border-radius: 6px;
    color: #333;
    background: rgba(255,255,255,.2);
    margin:5px;
}
input.input-form:focus, input.input-form.active {
  outline: none;
  border-color: #1B82C7;
  background: rgba(255,255,255,.5);

}
